{
  "name": "jwtools",
  "version": "1.0.3",
  "description": "A collection of useful tools for JW AV Brothers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --mac --win --linux",
    "package-mac": "electron-builder build --mac",
    "package-win": "electron-builder build --win",
    "package-linux": "electron-builder build --linux"
  },
  "keywords": [],
  "author": "JW Tools Team",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/advenimus/jwtools.git"
  },
  "dependencies": {
    "electron-log": "^5.3.2",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.jwtools.app",
    "productName": "JW Tools",
    "artifactName": "JW-Tools-${version}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "advenimus"
      }
    ],
    "mac": {
      "icon": "assets/mac_logo.icns"
    },
    "win": {
      "icon": "assets/logo.png"
    },
    "linux": {
      "icon": "assets/logo.png"
    }
  }
}
